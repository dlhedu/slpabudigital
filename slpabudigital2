<!-- =================  JavaScript  ================= -->
<script>
/* ---------- Tab Switching (Side + Mobile + Shortcuts) ---------- */
function changeTab(id){
    document.querySelectorAll('section.tab-content').forEach(sec=>sec.classList.remove('active'));
    document.getElementById(id).classList.add('active');

    document.querySelectorAll('.side-nav a').forEach(a=>a.classList.toggle('active',a.dataset.tab===id));
    document.querySelectorAll('.tab-navigation button').forEach(btn=>btn.classList.toggle('active',btn.onclick.toString().includes(id)));

    updateProgress();
    history.replaceState(null,null,'#'+id);
}
document.querySelectorAll('.side-nav a').forEach(a=>a.addEventListener('click',e=>{e.preventDefault();changeTab(a.dataset.tab)}));
document.addEventListener('keydown',e=>{
    if(e.altKey && /^[1-5]$/.test(e.key)){['overview','competences','structure','qualification','tools'].forEach((t,i)=>{if(i+1==e.key)changeTab(t)})}
});

/* ---------- Accordion ---------- */
document.querySelectorAll('.accordion-header').forEach(h=>{
    h.addEventListener('click',()=>{
        h.classList.toggle('active');
        const body=h.nextElementSibling;
        body.classList.toggle('open');
        body.style.maxHeight=body.classList.contains('open')?body.scrollHeight+'px':0;
        updateProgress();
    });
});

/* ---------- Progress via IntersectionObserver ---------- */
const targets=document.querySelectorAll('section.tab-content, .accordion-header, .process-step, .competence-card');
let observed=new Set();
const io=new IntersectionObserver((entries)=>{
    entries.forEach(entry=>{
        if(entry.isIntersecting){
            observed.add(entry.target);
            applyProgress();
        }
    });
},{threshold:.4});
targets.forEach(t=>io.observe(t));

function applyProgress(){
    const percent=Math.min(Math.round(observed.size/targets.length*100),100);
    const bar=document.getElementById('bar');
    bar.style.width=percent+'%';
    bar.textContent=percent+'¬†%';
}

/* ---------- Back‚Äëto‚ÄëTop ---------- */
const toTop=document.getElementById('toTop');
window.addEventListener('scroll',()=>{toTop.classList.toggle('show',window.scrollY>400)});
toTop.addEventListener('click',()=>window.scrollTo({top:0,behavior:'smooth'}));

/* ---------- Init ---------- */
updateProgress();
function updateProgress(){/* ruft applyProgress; wird indirekt vom Observer erg√§nzt */}
</script>
