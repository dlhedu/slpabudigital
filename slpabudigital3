    <script>
        // Tab Navigation
        function showTab(tabId) {
            document.querySelectorAll('.tab-content').forEach(tab => {
                tab.classList.remove('active');
            });
            
            document.querySelectorAll('.tab button').forEach(btn => {
                btn.classList.remove('active');
            });
            
            document.getElementById(tabId).classList.add('active');
            event.target.classList.add('active');
            
            updateProgress();
        }

        // Accordion Toggle
        function toggleAccordion(header) {
            const content = header.nextElementSibling;
            const isActive = header.classList.contains('active');
            
            header.parentElement.parentElement.querySelectorAll('.accordion-header').forEach(h => {
                h.classList.remove('active');
                h.nextElementSibling.classList.remove('active');
            });
            
            if (!isActive) {
                header.classList.add('active');
                content.classList.add('active');
            }
            
            updateProgress();
        }

        // Competence Card Toggle
        function toggleCompetence(card) {
            const details = card.querySelector('.competence-details');
            details.classList.toggle('active');
            updateProgress();
        }

        // Process Step Toggle
        function toggleProcess(step) {
            const content = step.querySelector('.process-content');
            content.classList.toggle('active');
            updateProgress();
        }

        // Modal Functions
        function showModal(type) {
            const modal = document.getElementById('modal');
            const title = document.getElementById('modalTitle');
            const body = document.getElementById('modalBody');
            
            const modalContent = {
                'spiral': {
                    title: 'Das Spiralcurriculum',
                    content: `
                        <h4>Prinzip des spiralf√∂rmigen Kompetenzaufbaus:</h4>
                        <p>Kompetenzen werden nicht einmalig behandelt, sondern √ºber die gesamte Lehrzeit in verschiedenen Kontexten und mit steigender Komplexit√§t aufgebaut:</p>
                        <ul>
                            <li><strong>1. Durchgang:</strong> Grundlegendes Verst√§ndnis</li>
                            <li><strong>2. Durchgang:</strong> Anwendung in neuen Kontexten</li>
                            <li><strong>3. Durchgang:</strong> Transfer und Vernetzung</li>
                            <li><strong>4. Durchgang:</strong> Selbstst√§ndige, kreative Anwendung</li>
                        </ul>
                    `
                },
                'grades': {
                    title: 'Erfahrungsnoten im Detail',
                    content: `
                        <h4>Generierung der Erfahrungsnoten:</h4>
                        <ul>
                            <li>Pro Semester zwei Teilnoten (SuK + Gesellschaft)</li>
                            <li>Mindestens 3 Kompetenznachweise pro Teilbereich</li>
                            <li>Kompetenzorientierte Pr√ºfungsformen</li>
                            <li>Arithmetisches Mittel aller Semesternoten</li>
                        </ul>
                    `
                },
                'thesis': {
                    title: 'Schlussarbeit - Anforderungen',
                    content: `
                        <h4>Rahmenbedingungen:</h4>
                        <ul>
                            <li>25-35 Arbeitsstunden</li>
                            <li>Gesellschaftsrelevante Fragestellung</li>
                            <li>Begleitung durch ABU-Lehrperson</li>
                            <li>Team- oder Einzelarbeit m√∂glich</li>
                        </ul>
                        <h4>Bewertung:</h4>
                        <ul>
                            <li><strong>Prozess (40%):</strong> Planung, Durchf√ºhrung, Reflexion</li>
                            <li><strong>Produkt (40%):</strong> Inhalt und Form</li>
                            <li><strong>Pr√§sentation (20%):</strong> Inhalt und Auftreten</li>
                        </ul>
                    `
                },
                'exam': {
                    title: 'Schlusspr√ºfung',
                    content: `
                        <h4>Format:</h4>
                        <ul>
                            <li>Dauer: 150 Minuten (schriftlich) oder 20 Minuten (m√ºndlich)</li>
                            <li>Einzelpr√ºfung</li>
                            <li>Lernbereichs√ºbergreifende Aufgaben</li>
                        </ul>
                        <h4>Anforderungen:</h4>
                        <ul>
                            <li>Transfer auf neue Situationen</li>
                            <li>Vernetzte Probleml√∂sung</li>
                            <li>Kritische Reflexion</li>
                        </ul>
                    `
                },
                'checklist': {
                    title: 'Checkliste SLP-Erstellung',
                    content: `
                        <h4>Der Schullehrplan muss:</h4>
                        <ul>
                            <li>‚òê Zeitlich, p√§dagogisch und didaktisch organisiert sein</li>
                            <li>‚òê Verkn√ºpfung der Kompetenzen sichtbar machen</li>
                            <li>‚òê Jede Schl√ºsselkompetenz mind. 1x ber√ºcksichtigen</li>
                            <li>‚òê Jeden Kommunikationsmodus mind. 1x einbeziehen</li>
                            <li>‚òê Jeden Aspekt mind. 1x behandeln</li>
                            <li>‚òê Spiralf√∂rmiges Curriculum umsetzen</li>
                            <li>‚òê QV detailliert regeln</li>
                        </ul>
                    `
                }
            };
            
            const content = modalContent[type] || {
                title: 'Information',
                content: '<p>Weitere Informationen folgen...</p>'
            };
            
            title.textContent = content.title;
            body.innerHTML = content.content;
            
            modal.classList.add('active');
            updateProgress();
        }

        function closeModal() {
            document.getElementById('modal').classList.remove('active');
        }

        // Progress Tracking
        let visitedElements = new Set();

        function updateProgress() {
            visitedElements.add(document.querySelector('.tab button.active').textContent);
            
            const totalElements = 20;
            const visited = visitedElements.size;
            const progress = Math.min(Math.round((visited / totalElements) * 100), 100);
            
            const progressBar = document.getElementById('progressBar');
            if (progressBar) {
                progressBar.style.width = progress + '%';
            }
        }

        // Close modal on outside click
        window.onclick = function(event) {
            const modal = document.getElementById('modal');
            if (event.target === modal) {
                closeModal();
            }
        }

        // Initialize
        updateProgress();
    </script>
</body>
